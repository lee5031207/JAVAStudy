<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>a_servlet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>encoding</filter-name>
    <filter-class>com.kh.servlet.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>second</filter-name>
    <filter-class>com.kh.servlet.filter.SecondFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>second</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>viewResolver</filter-name>
    <filter-class>com.kh.servlet.filter.ViewResolver</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>viewResolver</filter-name>
    <url-pattern>/filter</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.kh.servlet.listener.G_SessionListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>listener</servlet-name>
    <servlet-class>com.kh.servlet.controller.I_Listener</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>listener</servlet-name>
    <url-pattern>/usercount</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>com.kh.test.controller.TestController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/test.do</url-pattern>
  </servlet-mapping>

</web-app>