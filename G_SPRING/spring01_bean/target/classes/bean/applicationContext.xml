<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="Lee" class="bean.Address">
		<constructor-arg name="name" value="이성욱" />
		<constructor-arg name="address" value="경기 과천" />
		<constructor-arg name="phone" value="010-7486-1207" />
	</bean>
	
	<bean id="hong" class="bean.Address">
		<property name="name" value="홍길동"></property>
		<property name="address" value="서울시 광화문"></property>
		<property name="phone" value="010-8282-8282"></property>
	</bean>
	
	<bean id="hopeForTheFlower" class="bean.Book">
		<constructor-arg name="title" value="hopeForTheFlower" />
		<constructor-arg name="author" value="하명도" />
		<constructor-arg name="publisher" value="Pclass" />
		<constructor-arg name="page" value="1000" />
	</bean>
	
	<bean id="jungle" class="bean.Book">
		<property name="title" value="정글고"></property>
		<property name="author" value="김규삼"></property>
		<property name="publisher" value="네이버"></property>
		<property name="page" value="10000"></property>
	</bean>
</beans>
